{
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "ecmaFeatures": {
    jsx: true
  },
  "plugins": ["jasmine"],
  "extends": ["eslint-config-airbnb", "plugin:jasmine/recommended"],
  "rules": {
    "comma-dangle": 0,
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "react/prop-types": 0,
    "react/no-find-dom-node": 1,
    "no-unused-vars": 1,
    "max-len": [2, { "code": 120, "ignoreComments": true}]
  },
  "globals": {
    "browser": true
  }
}
